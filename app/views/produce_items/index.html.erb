<div class="ui inverted vertical masthead center aligned green segment">
  <div class="ui text container">
    <h1 class="ui inverted header">
      <h1>Produce Items Inventory</h1>
    </h1>
  </div>
</div>

<div class="ui hidden divider"></div>

<div class="ui two column center aligned grid container">
  <div class="column">
    <%= form_tag produce_items_path, method: :get do %>
      <div class="ui action input">
        <%= text_field_tag :search, params[:search], placeholder: "Search produce item..." %>
        <%= button_tag "Search", type: "submit", name: nil, class: "ui green basic button" %>
      </div>
    <% end %>
  </div>

  <div class="column">
    <% if current_user.admin? %>
      <%= link_to(new_produce_item_path) do %>
        <div class="ui green basic button">
          New produce item
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="ui hidden divider"></div>

<table class="ui green celled table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produce_items.each do |produce_item| %>
      <tr>
        <td><%= image_tag(produce_item.photo.thumb) %></td>
        <td><%= produce_item.name %></td>
        <td><%= produce_item.category %></td>
        <td><%= link_to "Show", produce_item, class: "ui green basic label" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
