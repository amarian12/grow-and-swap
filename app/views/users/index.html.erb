<div class="ui inverted vertical masthead center aligned green segment">
  <div class="ui text container">
    <h1 class="ui inverted header">
      <h1>Users Index</h1>
    </h1>
  </div>
</div>

<% if current_user.admin? %>
  <%= link_to 'Add New User', new_user_path %>
<% end %>

<div class="ui hidden divider"></div>

<div class="digg_pagination">
  <%= will_paginate @users %>

  <table class="ui green celled table">
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag(user.avatar.thumb) %></td>
          <td><%= link_to user.full_name, user, 'data-no-turbolink' => true %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @users %>
</div>
