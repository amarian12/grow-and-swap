<div class="ui inverted vertical masthead center aligned green segment">
  <div class="ui text container">
    <h1 class="ui inverted header">
      <h1>Welcome to Grow and Swap</h1>
    </h1>
    <h2>A resource to locally trade your produce</h2>
  </div>
</div>

<div class="ui hidden divider"></div>

<div class="ui center aligned container">
  <% if logged_in? %>
    <%= link_to(garden_items_near_me_garden_items_path) do %>
      <div class="ui green basic button">
        Browse garden items in your area
      </div>
    <% end %>

    <br>
    <div class="ui hidden divider"></div>

    <%= link_to(gardeners_near_me_users_path) do %>
      <div class="ui green basic button">
        View gardeners in your area
      </div>
    <% end %>

    <br>
    <div class="ui hidden divider"></div>

    <%= link_to(current_user_index_garden_items_path) do %>
      <div class="ui green basic button">
        My garden items
      </div>
    <% end %>

    <br>
    <div class="ui hidden divider"></div>

    <%= link_to(trade_offers_path) do %>
      <div class="ui green basic button">
        My trade offers
      </div>
    <% end %>
  <% else %>
    <%= link_to(garden_items_path) do %>
      <div class="ui green basic button">
        Browse garden items
      </div>
    <% end %>
  <% end %>

    <br>
    <div class="ui hidden divider"></div>

  <% if logged_in? && current_user.admin? %>
    <h4>Administrator Actions</h4>
    <%= link_to(produce_items_path) do %>
      <div class="ui green basic button">
        View produce items inventory
      </div>
    <% end %>

    <br>
    <div class="ui hidden divider"></div>

    <%= link_to(users_path) do %>
      <div class="ui green basic button">
        View users
      </div>
    <% end %>
  <% end %>
</div>
