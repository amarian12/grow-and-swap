<div class="ui inverted vertical masthead center aligned green segment">
  <div class="ui text container">
    <h1 class="ui inverted header">
      <h1>Welcome to Grow and Swap</h1>
    </h1>
    <h2>A resource to locally trade your produce.</h2>
  </div>
</div>

<div class="ui hidden divider"></div>

<div class="ui center aligned container">
  <%= link_to(garden_items_path) do %>
    <div class="ui green basic button">
      Browse garden items in your area
    </div>
  <% end %>

  <br>
  <div class="ui hidden divider"></div>

  <% if logged_in? %>
    <%= link_to(trade_offers_path) do %>
      <div class="ui green basic button">
        My trade offers
      </div>
    <% end %>

    <br>
    <div class="ui hidden divider"></div>

    <%= link_to(produce_items_path) do %>
      <div class="ui green basic button">
        View produce items inventory
      </div>
    <% end %>
  <% end %>
</div>
